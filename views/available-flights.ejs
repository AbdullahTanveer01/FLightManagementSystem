<!DOCTYPE html>
<html>
<head>
  <title>Available Flights</title>
  <link href="https://fonts.googleapis.com/css?family=PT+Sans:400,700" rel="stylesheet">
</head>
<body>
    <header class="header">
        <h2 class="logo">Airline Company</h2>
        <nav class="navigation">
          <a href="/dashboard">Home</a>
          <a href="/contact">Contact</a>
          <a href="/about" >About Us</a>
          <a href="/book-flight">Book Flight</a>
          <a href="/" class="btnLogout-popup">Logout</a>
        </nav>
    </header>
    
  
  <div class="container">
    <h1>Available Flights</h1>
    
    <% if (flights.length > 0) { %>
      <div class="table-container">
        <table>
          <tr>
            <th>Airline</th>
            <th>Departure</th>
            <th>Arrival</th>
            <th>Price</th>
            <th>Confirmation</th>
          </tr>
          <% flights.forEach(function(flight) { %>
            <tr>
              <td><%= flight.airlines %></td>
              <td><%= flight.departure_airport_id %> - <%= flight.arrival_airport_id %></td>
              <td><%= flight.departure_airport_id %> - <%= flight.arrival_airport_id %></td>
              <td>$<%= flight.price %></td>
              <td>
                <form action="/make-payment/<%= flight.id %>" method="GET">
                  <button class="btn-confirm" type="submit">Confirm Booking</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </table>
      </div>
      <% } else { %>
        <p class="no-flights">No flights available for the selected airports.</p>
      <% } %>
    </div>
  </body>
  </html>










  <style>
    * {
      box-sizing: border-box;
    }
    
    html, body {
      margin: 0;
      padding: 0;
    }
    
    body {
      font-family: 'PT Sans', Arial, Verdana;
      background-color: #f1f1f1;
    }
    
    h1 {
      text-align: center;
      font-size: 48px;
      text-transform: uppercase;
      letter-spacing: 3px;
      color: #222;
      margin: 40px 0;
    }
    
    .header {
      background-color: #2c3e50;
      position: relative;
      z-index: 7;
      padding: 20px;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }
    
    .logo {
      font-size: 24px;
      color: #fff;
    }
    
    .navigation {
      list-style: none;
      margin: 0;
      padding: 0;
      display: flex;
    }
    
    .navigation a {
      display: block;
      color: #fff;
      text-decoration: none;
      font-size: 18px;
      margin-right: 20px;
      padding: 10px 0;
      position: relative;
      transition: color 0.3s ease;
    }
    
    .navigation a:hover {
      color: #e74c3c;
    }
    
    .navigation a:before {
      content: '';
      position: absolute;
      width: 0;
      height: 2px;
      bottom: 0;
      left: 0;
      background-color: #e74c3c;
      transition: width 0.3s ease;
    }
    
    .navigation a:hover:before {
      width: 100%;
    }
    
    .table-container {
      margin-top: 40px;
    }
    
    table {
      width: 100%;
      border-collapse: collapse;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      background-color: #fff;
    }
    
    th, td {
      padding: 12px 15px;
      text-align: left;
    }
    
    th {
      background-color: #2c3e50;
      color: #fff;
      text-transform: uppercase;
      font-size: 14px;
      border-bottom: 2px solid #34495e;
    }
    
    tr:nth-child(even) {
      background-color: #f2f2f2;
    }
    
    tr:hover {
      background-color: #e6e6e6;
    }
    
    .btn-confirm {
      background-color: #e74c3c;
      color: #fff;
      border: none;
      padding: 5px 10px;
      text-decoration: none;
      border-radius: 4px;
      font-size: 14px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }
    
    .btn-confirm:hover {
      background-color: #c0392b;
    }
    .no-flights {
      text-align: center;
      margin-top: 40px;
      font-size: 18px;
      color: #555;
    }
    
    /* Additional Styling */
    
    /* Background Gradient */
    body {
      background: linear-gradient(to bottom, #f1f1f1, #ddd);
    }
    
    /* Centered Container */
    .container {
      max-width: 800px;
      margin: 0 auto;
      padding: 20px;
      background-color: #fff;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    
    /* Button Styles */
    button {
      padding: 10px 20px;
      background-color: #e74c3c;
      color: #fff;
      border: none;
      border-radius: 4px;
      font-size: 16px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }
    
    button:hover {
      background-color: #c0392b;
    }
    
    /* Responsive Styles */
    @media (max-width: 600px) {
      h1 {
        font-size: 36px;
      }
      
      .container {
        padding: 10px;
      }
      
      .navigation {
        flex-wrap: wrap;
        justify-content: center;
      }
      
      .navigation a {
        margin-right: 10px;
        margin-bottom: 10px;
        padding: 5px 0;
      }
      
      .navigation a:before {
        content: none;
      }
      
      table {
        font-size: 14px;
      }
      
      th, td {
        padding: 10px;
      }
    }
  </style>